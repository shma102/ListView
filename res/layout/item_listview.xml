<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/id_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Android打造全能适配器"
        android:textColor="#444"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/id_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_item_title"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:minLines="1"
        android:text="Android这就是非常好用的适配器"
        android:textColor="#898989"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/id_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_item_desc"
        android:layout_marginTop="10dp"
        android:text="2016-04-12"
        android:textColor="#444"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/id_item_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/id_item_time"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/id_item_title" />

</RelativeLayout>